root = false

[*]
charset = "utf-8"
trim_trailing_whitespace = true
insert_final_newline = true


[*.(ts, js, css)]
curly_bracker_next_line = true
indent_size = 1
indent_style = tab
end_of_line = lf
# игнорируем длинные строки
max_line_length = off


[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = false
